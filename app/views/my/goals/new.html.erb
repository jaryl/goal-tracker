<h1>New Goal</h1>

<%= form_with(model: [:my, @goal], local: true) do |form| %>
  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% @goal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :goal_name, placeholder: 'Rainy Day Fund' %>
  </div>

  <div class="field">
    <%= form.label :goal_value %>
    <%= form.number_field :goal_value, id: :goal_goal_value, placeholder: 'For e.g. 10000' %>
  </div>

  <div class="field">
    <%= form.label :unit_of_measure %>
    <%= form.select :unit_of_measure, ['sets', '$', 'kg', 'km'], id: :goal_unit_of_measure, include_blank: '-- Please choose one --' %>
  </div>

  <%= form.fields_for :items do |item_fields| %>
    <%= item_fields.label :item_value %>
    <%= item_fields.number_field :item_value, id: :goal_items_item_value, placeholder: 'For e.g. 2000' %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', my_goals_path %>
