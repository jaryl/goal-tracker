<h1>Please login</h1>

<%= form_with url: session_path, local: true do |form| %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :email_value, value: params[:email] %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :password_value %>
  </div>

  <div class="actions">
    <%= form.submit 'Login' %>
  </div>
<% end %>
